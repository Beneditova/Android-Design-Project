<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp">

  <ImageView
      android:id="@+id/catImage"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:contentDescription="@string/Cat"
      app:srcCompat="@drawable/nyohvampire" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="vertical"
      android:padding="5dp">

    <ImageView
        android:id="@+id/heart1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/Heart"
        app:srcCompat="@drawable/heart" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

      <TextView
          android:id="@+id/userName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Кристян Коралов" />

      <TextView
          android:id="@+id/userDesire"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Страхотни хора и приложние" />
    </LinearLayout>

    <ImageView
        android:id="@+id/heart2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/Heart"
        app:srcCompat="@drawable/heart" />
    <LinearLayout
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

      <TextView
          android:id="@+id/userName2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Цветан Гоздов" />

      <TextView
          android:id="@+id/userDesire2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Хубава комуникация" />
    </LinearLayout>

    <ImageView
        android:id="@+id/heart3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/Heart"
        app:srcCompat="@drawable/heart" />

    <LinearLayout
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

      <TextView
          android:id="@+id/userName3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Иван Иванов" />

      <TextView
          android:id="@+id/userDesire3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Обслужане на ниво" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>